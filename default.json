{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:recommended",
      ":semanticCommitTypeAll(fix)",
      ":automergeMinor",
      ":disableRateLimiting"
    ],
    "schedule": [
      "before 4am on Sunday"
    ],
    "timezone": "America/Vancouver",
    "packageRules": [
      {
        "groupName": "kotlin",
        "matchPackagePrefixes": [
          "org.jetbrains.kotlin"
        ]
      }
    ]
  }
  